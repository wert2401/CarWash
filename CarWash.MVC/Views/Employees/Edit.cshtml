@model CarWash.MVC.ViewModels.EmployeeViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Entity.FirstName" class="control-label"></label>
                <input asp-for="Entity.FirstName" class="form-control" />
                <span asp-validation-for="Entity.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Entity.LastName" class="control-label"></label>
                <input asp-for="Entity.LastName" class="form-control" />
                <span asp-validation-for="Entity.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Entity.Patronymic" class="control-label"></label>
                <input asp-for="Entity.Patronymic" class="form-control" />
                <span asp-validation-for="Entity.Patronymic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                @if (Model.Entity.Image != null)
                {
                    <img src="~/@Model.Entity.Image" width="100" height="100" />
                }
                <input asp-for="ImageFile" class="form-control" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
